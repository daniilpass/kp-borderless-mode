{
    "manifest_version": 3,
    "name": "Кинопоиск. Режим просмотра без полей.",
    "version": "1.0",
    "description": "Добавляет в плеер Кинопоиска режим просмотра без полей.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "css" : ["styles/style.css"],
          "matches": [
            "https://hd.kinopoisk.ru/*"
          ]
        }
      ]
  }